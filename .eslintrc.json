{
	"root": true,
	"extends": "eslint:recommended",
	"env": {
		"node": true,
		"es6": true
	},
	"parserOptions": {
		"ecmaVersion": 2021
	},
	"rules": {
		"accessor-pairs": "error",
		"array-callback-return":"warn",
		"array-bracket-spacing": ["error", "always", { "singleValue": false, "objectsInArrays": false, "arraysInArrays": false }],
		"block-scoped-var":"error",
		"brace-style": ["error", "stroustrup", { "allowSingleLine": true }],
		"camelcase":"error",
		"comma-spacing":"error",
		"comma-style": ["error", "last"],
		"default-case": "error",
		"dot-location": ["error", "property"],
		"dot-notation": "error",
		"eqeqeq": "error",
		"handle-callback-err": "off",
		"indent": ["error", "tab", { "ignoreComments": true }],
		"key-spacing": ["error", { "beforeColon": false, "afterColon": true }],
		"max-nested-callbacks": ["error", { "max": 4 }],
		"max-statements-per-line": ["error", { "max": 2 }],
		// "multiline-comment-style": ["error", "starred-block"],
		"new-parens":"error",
		"no-await-in-loop": "error",
		"no-cond-assign": ["error", "except-parens"],
		"no-continue":"error",
		"no-console": "off",
		"no-else-return":"error",
		"no-eval":"error",
		"no-eq-null":"error",
		"no-extend-native":"error",
		"no-extra-bind": "error",
		"no-extra-label":"error",
		"no-extra-parens": ["warn", "all", { "conditionalAssign": false, "enforceForNewInMemberExpressions": false, "enforceForArrowConditionals": false, "returnAssign": false, "nestedBinaryExpressions": false }],
		"no-extra-semi":"error",
		"no-floating-decimal": "error",
		"no-implied-eval":"error",
		"no-magic-numbers":"warn",
		"no-multi-spaces": "error",
		"no-invalid-this":"error",
		"no-iterator":"error",
		"no-labels":"error",
		"no-lone-blocks":"error",
		"no-proto":"error",
		"no-self-compare":"error",
		"no-sequences":"error",
		"no-throw-literal":"error",
		"no-unmodified-loop-condition":"error",
		"no-unused-expressions":"error",
		"no-useless-call":"error",
		"no-useless-concat":"error",
		"no-useless-return":"error",
		"no-var":"error",
		"no-void":"error",
		"no-warning-comments":"warn",
		"no-whitespace-before-property":"error",
		"no-prototype-builtins":"off",
		"no-shadow": ["error", { "allow": ["err", "resolve", "reject"] }],
		"no-trailing-spaces": ["error"],
		"no-unneeded-ternary":"error",
		"no-unreachable-loop": "error",
		"no-unsafe-optional-chaining": "error",
		"require-atomic-updates": "error",
		"object-curly-spacing": ["error", "always"],
		"prefer-const": "error",
		"prefer-exponentiation-operator": "error",
		"semi": ["error", "always"],
		"semi-spacing": ["error", { "before": false, "after": true }],
		// "semi-style": ["error", "last"],
		// "sort-keys": ["warn", "asc", { "caseSensitive": true, "natural": true, "minKeys": 5 }],
		"space-before-function-paren": ["error", { "anonymous": "never", "named": "never", "asyncArrow": "always" }],
		"space-infix-ops":"error",
		"space-unary-ops":"error",
		"spaced-comment": ["error", "always", { "exceptions": ["-", "+", "*"] }],
		"symbol-description":"error",
		"strict":"error",
		"yoda": ["error", "never", { "exceptRange": true }]
	}
}